<h1>PEDIA Service</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Job ID</th>
      <th>Patient</th>
      <th>Submitter</th>
      <th>VCF</th>
      <th>Status</th>
      <th>Runtime</th>
      <th>Created date</th>
      <th>Modified date</th>
    </tr>
  </thead>

  <tbody>
    <% @pedia_services.each do |service| %>
      <tr>
        <td><%= service.job_id unless service.job_id.nil? %></td>
        <td><%= service.patient.case_id unless service.patient.nil? %></td>
        <td><%= service.user.first_name + ' ' + service.user.last_name %></td>
        <td><%= File.basename(service.vcf_file)  %></td>
        <td><%= service.pedia_status.status %></td>
        <% runtime = (service.updated_at - service.created_at) %>
        <td><%= (runtime.to_i / 60).to_s + '.' + (runtime.to_i % 60).to_s + ' min' %></td>
        <td><%= service.created_at %></td>
        <td><%= service.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
