<p id="notice"><%= notice %></p>
<head>
  <style>
    .borderless tr, .borderless td, .borderless th {
      border: none !important;
    }
  </style>
</head>
<h1>Mutation Review</h1>

<p>
<strong>
  Position:
</strong>
chr<%= @pos %>
</p>


<p>
<strong>
  Ref:
</strong>
<%= @ref %>
</p>

<p>
<strong>
  Genotype:
</strong>
<%= @genotype %>
</p>
<p>
<h2>dbSNP</h2>
<strong>
  dbSNP ID:
</strong>
<% if !@dbsnp_url.nil? %>
<a href= <%= @dbsnp_url %> target="_blank"><%= @snp_id %></a>
<% end %>
<%= @hgvs.to_s.html_safe %>
</p>
<h2>Mutation Taster</h2>
<p>
<li><a href= <%= @mut_taster_url %> target="_blank">mutation taster link</a></li>
<ol>
<% @transcripts.each do |row|%>
  <li><%= row %></li>
<% end %>
</ol>
<table class='table'>
  <thead>
    <tr>
      <th>Gene</th>
      <th>Prediction</th>
      <th>Probability</th>
      <th>Model</th>
      <th>Problem</th>
      <th>Splicing</th>
      <th>ClinVar</th>
      <th>amino acid changes</th>
      <th>dbSNP</th>
      <th>link</th>
    </tr>
  </thead>

  <tbody>
    <% table_idx = (0..7).to_a.push(9, 11)%>
    <% @mt_tables.each_with_index do |mt_table, row_idx| %>
      <tr>
        <% mt_table.css('td').each_with_index do |value, idx| %>
          <% if table_idx.include? idx %>
            <% if idx  == 11 %>
              <td><a href= <%= @mut_taster_url + '#' + (row_idx + 1).to_s %> target="_blank">link</a></td>
            <% else%>
              <td><%= value.text %></td>
            <% end %>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

Summary: 
<br>
<ol>
<% @summary.each do |sum| %>
  <li><%= sum.to_s.html_safe %></li>
<% end %>
</ol>
</p>
<h2>ExAC Browser</h2>
<p>
<li><a href= <%= @exac_url %> target="_blank">ExAC Browser link</a></li>
<table class='table'>
  <thead>
    <tr>
      <th>Variant</th>
      <th>Chrom</th>
      <th>Position</th>
      <th>Consequence</th>
      <th>Filter</th>
      <th>Annotation</th>
      <th>Flags</th>
      <th>Allele Count</th>
      <th>Allele Number</th>
      <th># of Homozygotes</th>
      <th>Allele Freq</th>
    </tr>
  </thead>

  <tbody>
    <% @result_array.each_with_index do |row, row_idx| %>
      <tr>
        <% row.each_with_index do |entry, entry_idx| %>
            <% if entry_idx  == 0 %>
              <td nowrap="nowrap"><a href= <%= "http://exac.broadinstitute.org/variant/" + entry %> target="_blank"><%= entry %></a></td>
            <% else %>
              <td><%= entry %></td>
            <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</p>

