<script type="text/javascript">
// other:
  function update_inherit(){
    $("#summary_inherit").empty().append( '<b>Inheritance filter: </b>' + $('#inherit input:checked').next()
      .map( function() { 
         return $(this).html();
      }).get().join(', ') );    
  };
  function update_ped( ped ){
     if ( ped == "1") {
       $("#inherit-single").hide();
       $("#inherit-multi").show();
       $("#inherit-multi input").show();
       // $("#freq-single").hide();
       $("#freq-multi").show();
       $("#inherit-single input").attr('checked', false);
       $("#inherit-multi input").attr('checked', true);
     } else {
       $("#inherit-single").show();
       $("#inherit-multi").hide();
       // $("#freq-single").show();
       $("#freq-multi").hide();
       $("#inherit-single input").attr('checked', true);
       $("#inherit-multi input").attr('checked', false);
     }
     update_inherit();    
  };        
  function update_anno(){
//    if ( this.checked){
//     $('#keep').html("Keep");
//    } else {
//      $('#keep').html("Remove");
//    }
    $('#summary_anno').empty().append( '<b>Annotation filter: </b> ' + ($('#keep').attr('checked') ? 'Keep' : 'Remove') + ' unannotated, ' 
                                       + ($('#disease_causing').html() || 'No relevance filtering') + ', '
                                       + ($('#trust').html() || 'No evidence filtering') + ', '
                                       + ($('#exp_level').html() || 'No expert filtering') );
  };
  //function open_url(url){
    //testwindow = window.open(url, "BaseSpace Permissions", "location=1,status=1,scrollbars=1,width=800,height=600");
    //testwindow.moveTo(100, 100);
  //};
  function update_qual(){
    var s = '';
    if ( $('#q_qual').attr('checked') ) {
       s += 'Quality above ';
       s += $('#q_qual_thres').val();
    }
    if ( $('#q_qual').attr('checked') && $('#q_cov').attr('checked') ) {
       s += ' AND '; 
    }
    if ( $('#q_cov').attr('checked') ) {
       s += 'Coverage above ';
       s += $('#q_cov_thres').val();
       s += $('#q_cov_all_1').is(':checked') ? ' in all samples ' : ' in at least one sample ';
    }
    if ( !s ) {
       s = 'None';
    }
    $('#summary_qual').empty().append( '<b>Quality filter: </b>' + s );
  };
  function update_freq_perc(){
    var vhet = $('#freq_het').val();
    var vhom = $('#freq_hom').val();
<% if !current_login.user.licensed? %>
    if ((vhet < 1.0) || (vhom < 1.0)) {
       vhet = Math.max(1.0, vhet);
       vhom = Math.max(1.0, vhom);
       $('#freq_het').val( vhet ); $('#sl_het').val( 0.5 * Math.log( vhet ) * Math.LOG10E );
       $('#freq_hom').val( vhom ); $('#sl_hom').val( 0.5 * Math.log( vhom ) * Math.LOG10E );
       alert("Filtering for frequencies below 1.0% requires a GeneTalk Professional license");
    }
<% end %>
    if ((vhet == 0) || (vhom == 0)) {
      $('#num_het').html( 'No frequency filtering');
      $('#num_hom').html( 'No frequency filtering');
      $("#summary_freq").empty().append( 'No genotype frequency filtering' );
    } else {
      $('#num_het').html( '(i.e., 1 out of ' + Math.round(100/vhet) + ')' );
      $('#num_hom').html( '(i.e., 1 out of ' + Math.round(100/vhom) + ')' );
      $("#summary_freq").empty().append( '<b>Genotype frequencies: </b> Het: ' + $('#freq_het').val() + ' Hom: ' + $('#freq_hom').val() );
     }
  };
  $(document).ready(function(){
// Presets:

  $('#preset_save').click( function(){
    var data = {};
    var name = $('#preset_name').attr( 'value' );
    if ( name ){
      data['name'] = name;
      data['gene_panel'] = $('#gene_set_table input:checked').map( function() { return $(this).attr('value'); }).get();
      data['collections'] = $('#collections').attr( 'value' );
      data['functional'] = $('input[id^="funcfilter"]:checked').map( function() { return $(this).attr( 'data-sid' ); }).get();
      data['linkages'] = $('input[id^="linkage"]:checked').attr( 'value' );
      data['q_qual'] = $('#q_qual').prop( 'checked' );
      data['q_qual_thres'] = $('#q_qual_thres').attr('value');
      data['q_cov'] = $('#q_cov').prop( 'checked' );
      data['q_cov_thres'] = $('#q_cov_thres').attr('value');
      data['q_cov_all'] = $('input[id^="q_cov_all"]:checked').attr( 'value' );
      data['freq_het'] = $('#freq_het').attr('value');
      data['freq_hom'] = $('#freq_hom').attr('value');
      data['ab_hom_min'] = $('#ab_hom_min').attr('value');
      data['ab_het_max'] = $('#ab_het_max').attr('value');
      data['ab_het_min'] = $('#ab_het_min').attr('value');
      data['mode'] = $('input[id^="inherit"]:checked').map( function() { return $(this).attr( 'data-sid' ); }).get();
      data['significance'] = $('input[id^="disease_causing"]:checked').attr( 'value' );
      data['prefer_private_annos'] =  $('input[id^="prefer_private_annos"]:checked').attr( 'value' );
      data['keep'] =  $('input[id^="keep"]:checked').attr( 'value' );
      data['nodbsnp'] = $('#nodbsnp').prop( 'checked' );
      $.ajax({ 
        type: "POST", 
        url: '/filter_presets/',
        data: data,
        complete: function(xhr, status){
           alert( xhr.responseText );
        }
      });
    } else {
      alert('Please enter the name for this filter presets');
    }
  });
  $('#preset').on('change', function(){
    $.getJSON('/filter_presets/' + $(this).val(), function( data ) {
      var specials = ['gene_panel', 'functional', 'linkages', 'q_qual', 'q_cov', 'q_cov_all', 'mode', 'significance', 'prefer_private_annos', 'keep', 'nodbsnp']
      $.each( data, function( k, v ){
        if ( $.inArray( k, specials) < 0 ) {
           $( '#' + k ).attr( 'value', v );
        }
      });
      //  $('#collections').attr( 'value', data['collections'] );
      if ( data['gene_panel'] != null ) {
        $.each( data['gene_panel'], function( index, value ) {
          $('#gene_panel_' + value ).attr('checked', true);
        });
      }
      $('input[name="funcfilter[]"]').attr('checked', false); 
      $.each( data['functional'], function( index, value ) {
        $('input[data-sid=' + value + ']').attr('checked', true);
      });
      $('#nonsynonymous').trigger( 'change' );
      $('#noncoding').trigger( 'change' );
      $('#linkage_' + data['linkages']).attr('checked', true);
      $('#q_qual').attr( 'checked', data['q_qual'] );
      $('#q_cov').attr( 'checked', data['q_cov'] );
      $('#q_cov_all_'+data['q_cov_all']).attr('checked', true );
      $('#freq_het' ).trigger( 'change' );
      $('#freq_hom' ).attr( 'value', data['freq_hom'] );
      $('#freq_hom' ).trigger( 'change' );
      update_freq_perc();
      $('input[name="inherit[]"]').attr('checked', false);
      $.each( data['mode'], function( index, value ) {
        $('input[data-sid=' + value + ']').attr('checked', true);
      });
      $('input[name="disease_causing"]').rating('select',data['significance']);
      $('#prefer_private_annos').attr( 'checked', data['prefer_private_annos'] );
      $('#keep').attr( 'checked', data['keep'] );
      $('#nodbsnp').attr( 'checked', data['nodbsnp'] );
      window.alert("Preset loaded");
    });
  });

    update_freq_perc();
    $('#sl_het').change(function(){
      var newval=Math.pow(10, $(this).val() );
      $('#freq_het').val( newval);
      if(newval<1.0){
        $('#sl_hom').val( 2.0 * Math.log( newval ) * Math.LOG10E );
        $('#freq_hom').val( (newval * newval));
      } else {
        $('#sl_hom').val( 0.5 * Math.log( newval ) * Math.LOG10E );
        $('#freq_hom').val( Math.sqrt(newval));
      }
      update_freq_perc();
    });
    $('#sl_hom').change(function(){
      var newval=$(this).val();
      $('#freq_hom').val( Math.pow(10,newval));
      update_freq_perc();
    });
    $('#freq_het').change(function(){
      var newval =  $(this).val();
      $('#sl_het').val( Math.log( newval ) * Math.LOG10E );
      if(newval<1.0){
        $('#sl_hom').val( 2.0 * Math.log( newval ) * Math.LOG10E );
        $('#freq_hom').val( (newval * newval));
      } else {
        $('#sl_hom').val( 0.5 * Math.log( newval ) * Math.LOG10E );
        $('#freq_hom').val( Math.sqrt(newval));
      }
      update_freq_perc();
    });
    $('#freq_hom').change(function(){
      var newval =  $(this).val();
      $('#sl_hom').val( Math.log( newval ) * Math.LOG10E );
      update_freq_perc();
    });
    $('.bs_link').attr('checked', false);
    $('.bs_link').click(function(event,link){
        if ( $(this).attr('checked') ) {
          $.getJSON('/basespace_link',
            $.param({
              "id": $(this).attr('pid')
            }),
            function(data) {
              //$("#dummy").append('<iframe src="' + data.message.link + ' 'height="100%" width="100%"></iframe>' ).dialog( {modal:true, height: 600, width:800, title:"BaseSpace Permissions" } );
              if ( data.message.link != null ) {
                //open_url( data.message.link );              
                //$('#debug').append( data.message.link + ' ' + data.message.code );
              };
            });
        };
    });   
    $('.hover-star').rating({
        focus: function(value, link){       
            var tip = $('#' + this.name); //.substring(this.name.indexOf('[') + 1, this.name.indexOf(']')));
            tip.data = tip.html();
            tip.html(link.title || 'value: ' + value);
        },
        blur: function(value, link){
            var tip1 = $('#trust');
            var tip2 = $('#disease_causing');
            var tip3 = $('#exp_level');
            tip1.html(tip1.attr('data') || '&nbsp;');
            tip2.html(tip2.attr('data') || '&nbsp;');
            tip3.html(tip3.attr('data') || '&nbsp;');
        },
        callback: function(value, link){
            if ((this.name=='trust')||(this.name=='disease_causing')||(this.name=='exp_level')){
              $('#' + this.name).html(link.title);
              $('#' + this.name).attr('data', link.title);
              update_anno();
            }
        }
    });
    $('.rating-cancel').click(function(value,link){
      var target=$(this).parent().parent().attr('id');
      if ( target == "dc_stars"){
        $('#disease_causing').html('&nbsp;');
        $('#disease_causing').attr('data', '');
      } else if (target == "trust_stars"){
        $('#trust').html('&nbsp;');
        $('#trust').attr('data', '');
      } else {
        $('#exp_level').html('&nbsp;');
        $('#exp_level').attr('data', '');
      }
      update_anno();
    });
    $('#keep').click(function(){
      update_anno();
    });        
    update_anno();

