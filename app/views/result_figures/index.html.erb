<p id="notice"><%= notice %></p>

<h1>Result Figures</h1>

<table>
  <thead>
    <tr>
      <th>Patient</th>
      <th>Type</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @result_figures.each do |result_figure| %>
      <tr>
        <td><%= result_figure.patient.case_id %></td>
        <td><%= result_figure.figure_type.name %></td>
        <td><%= result_figure.link %></td>
        <td><%= link_to 'Show', result_figure %></td>
        <td><%= link_to 'Edit', edit_result_figure_path(result_figure) %></td>
        <td><%= link_to 'Destroy', result_figure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Result Figure', new_result_figure_path %>
